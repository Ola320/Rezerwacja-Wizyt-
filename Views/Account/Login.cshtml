@model WebApplication1.Models.LoginViewModel

@{
    ViewData["Title"] = "Logowanie";
}

<h2>Logowanie</h2>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" style="color:red"></div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>

    <button type="submit">Zaloguj</button>
</form>

<p>
    Nie masz konta?
    <a asp-controller="Account" asp-action="Register">Zarejestruj się</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}