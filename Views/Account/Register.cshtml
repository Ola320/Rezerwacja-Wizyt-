@model WebApplication1.Models.RegisterViewModel

@{
    ViewData["Title"] = "Rejestracja";
}

<h2>Rejestracja</h2>

<form asp-action="Register" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly" style="color:red"></div>

    <div>
        <label asp-for="Pesel"></label>
        <input asp-for="Pesel" />
        <span asp-validation-for="Pesel" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Name"></label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Surname"></label>
        <input asp-for="Surname" />
        <span asp-validation-for="Surname" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" />
        <span asp-validation-for="Email" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Address"></label>
        <input asp-for="Address" />
        <span asp-validation-for="Address" style="color:red"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" />
        <span asp-validation-for="Password" style="color:red"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" type="password" />
        <span asp-validation-for="ConfirmPassword" style="color:red"></span>
    </div>

    <button type="submit">Zarejestruj</button>
</form>

<p>
    Masz już konto?
    <a asp-controller="Account" asp-action="Login">Zaloguj się</a>
</p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}